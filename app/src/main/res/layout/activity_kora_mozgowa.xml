<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.jolantawojcik.atlasfunkcjonalny.KoraMozgowa">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView android:text="@string/koraFunkcje" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView android:text="@string/koraStruktury" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/kora"
                android:src="@drawable/model_kora"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>

    </ScrollView>

