<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="pl.jolantawojcik.atlasfunkcjonalny.Rdzen">

            <TextView

                android:text="@string/funkcjeRdzen" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rdzen"
                />

            <TextView
                android:layout_below="@id/rdzen"
                android:id="@+id/sRdzen"
                android:text="@string/strukturyRdzen" android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                    android:layout_below="@id/sRdzen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/model_rdzen"
                    android:scaleType="matrix"
                    android:src="@drawable/model_rdzen"
                    android:layout_gravity="center_horizontal" />


</RelativeLayout>
